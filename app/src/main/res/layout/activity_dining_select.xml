<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gazua.ezswipe.DiningSelect">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="fill_parent"
        android:layout_height="57dp"
        android:background="#070523"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="60dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="100dp"
            android:orientation="horizontal">

            <ImageButton
                 android:id="@+id/bplate_btn"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:adjustViewBounds="true"
                android:onClick="bpClicked"
                android:scaleType="fitCenter"
                android:layout_weight="1"
                app:srcCompat="@drawable/bplate" />

            <ImageButton
                android:id="@+id/deNeve_btn"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:adjustViewBounds="true"
                android:onClick="dnClicked"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/deneve" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="horizontal">

            <ImageButton
            android:id="@+id/covel_btn"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:adjustViewBounds="true"
                android:onClick="cvClicked"
                android:scaleType="fitCenter"
                android:layout_weight="1"
                app:srcCompat="@drawable/covel" />

            <ImageButton
                android:id="@+id/feast_btn"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:onClick="ftClicked"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/feast" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <Button
                 android:id="@+id/buyer_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Buy"
                style="?android:attr/borderlessButtonStyle"/>

            <Button
                 android:id="@+id/seller_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Sell"
                style="?android:attr/borderlessButtonStyle"/>


        <Button
            android:id="@+id/signOutButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Out" />

        </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
